
let dia = "Martes"

if(dia=="lunes") {
    console.log("Es el primer dia de la semana");
} else if(dia=="viernes"){
    console.log("por fin es viernes");
} else {
    console.log("No es un dial especial");
}

let dia2 = "11"
dia2 == 12 ? console.log("Es el dia 12") : console.log("No es el dia 12")
if(dia2=="lunes") {
    console.log("Es el primer dia de la semana");
} else if(dia2===12){
    console.log("por fin es viernes");
} else {
    console.log("No es un dial especial");
}
